from apcs import Window
import speech_recognition as sr
import random
import turtle

while True:                                                                                                                         
    pen=turtle.Turtle()

    mic = sr.Microphone(1)
    r = sr.Recognizer()

    print("Welcome to the GameBooth!")
    print("The Games are: cross(Tic tac toe), Flappybird, Battleship, NumberGuess, and Adventure Game")
    with mic as source:
        print("Which Game do you want?")
        words = r.listen(source)
        recognized = r.recognize_google(words)
    x = "".join(recognized.lower().split())
    x = str(x)



    if x == "cross":
        with mic as source:
            print("Would you like to play with the computer or with a friend?")

            words1 = r.listen(source)
            qaw = r.recognize_google(words1)

            if qaw == "computer":
                print("Welcome to Tic Tac Toe! This is the board with the corresponding numbers: 00|01|02")
                print("                                                                          10|11|12")
                print("                                                                          20|21|22")
                print("To play: You are either X or O. Make sure your x/o matches 3 in a row")
                # Make the board
                def make_board():
                    board = []
                    for i in range(3):
                        row = []
                        for j in range(3):
                            row.append("-")
                        board.append(row)
                    return board


                # This is the board
                def print_board():
                    for i in range(3):
                        row = ""
                        for j in range(3):
                            row += board[i][j]
                        print(row)


                def check_row():
                    for i in range(3):
                        if board[i][0] == "X" and board[i][1] == "X" and board[i][2] == "X":
                            return "X"
                        if board[i][0] == "O" and board[i][1] == "O" and board[i][2] == "O":
                            return "O"


                def check_cols():
                    for i in range(3):
                        if board[0][i] == "X" and board[1][i] == "X" and board[2][i] == "X":
                            return "X"
                        if board[0][i] == "O" and board[1][i] == "O" and board[2][i] == "O":
                            return "O"


                def check_diags():
                    for i in range(3):
                        if board[0][0] == "X" and board[1][1] == "X" and board[2][2] == "X":
                            return "X"
                        if board[0][0] == "O" and board[1][1] == "O" and board[2][2] == "O":
                            return "O"
                        if board[0][2] == "X" and board[1][1] == "X" and board[2][0] == "X":
                            return "X"
                        if board[0][2] == "X" and board[1][1] == "X" and board[2][0] == "X":
                            return "O"


                def check_win():
                    if check_row() == "X" or check_cols() == "X" or check_diags() == "X":
                        return "X"
                    if check_row() == "O" or check_cols() == "O" or check_diags() == "O":
                        return "O"
                    else:
                        return "None"


                board = make_board()
                print_board()

                num_moves = 9
                player1 = "X"
                player2 = "O"
                player_num = 1

                current_player = player1
                while check_win() == "None" and num_moves > 0:
                    if player_num == 1:
                        current_player = player1
                    else:
                        current_player = player2
                    print("It is player ", current_player, "'s turn")
                    if current_player == "X":
                        player_row = int(input("Enter the row: "))
                        player_col = int(input("Enter the col: "))

                    elif current_player == "O":
                        if "X" == board[0][0] and "X" == board[0][1] and board[0][2] == "-":
                            player_row = 0
                            player_col = 2
                        elif "X" == board[0][0] and "X" == board[1][0] and board[2][0] == "-":
                            player_row = 2
                            player_col = 0
                        elif "X" == board[1][0] and "X" == board[1][1] and board[1][2] == "-":
                            player_row = 1
                            player_col = 2
                        elif "X" == board[0][1] and "X" == board[1][1] and board[2][1] == "-":
                            player_row = 2
                            player_col = 1
                        elif "X" == board[0][2] and "X" == board[1][2] and board[2][2] == "-":
                            player_row = 2
                            player_col = 2
                        elif "X" == board[2][0] and "X" == board[2][1] and board[2][2] == "-":
                            player_row = 2
                            player_col = 2
                        elif "X" == board[0][2] and "X" == board[0][1] and board[0][0] == "-":
                            player_row = 0
                            player_col = 0
                        elif "X" == board[0][0] and "X" == board[1][1] and board[2][2] == "-":
                            player_row = 2
                            player_col = 2
                        elif "X" == board[2][2] and "X" == board[1][2] and board[0][2] == "-":
                            player_row = 0
                            player_col = 2
                        elif "X" == board[2][0] and "X" == board[1][0] and board[0][0] == "-":
                            player_row = 0
                            player_col = 0
                        elif "X" == board[2][2] and "X" == board[2][1] and board[2][0] == "-":
                            player_row = 2
                            player_col = 0
                        elif "X" == board[2][0] and "X" == board[1][1] and board[0][2] == "-":
                            player_row = 0
                            player_col = 2
                        elif "X" == board[0][2] and "X" == board[1][1] and board[2][0] == "-":
                            player_row = 2
                            player_col = 0
                        elif "X" == board[2][2] and "X" == board[1][1] and board[0][0] == "-":
                            player_row = 0
                            player_col = 0
                        elif "X" == board[2][1] and "X" == board[1][1] and board[0][1] == "-":
                            player_row = 0
                            player_col = 1
                        elif "X" == board[1][2] and "X" == board[1][1] and board[1][0] == "-":

                            player_row = 1
                            player_col = 0

                        else:
                            good = False
                            while not good:
                                player_col = random.randint(0, 2)
                                player_row = random.randint(0, 2)
                                if board[player_row][player_col] == ('-'):
                                    good = True

                    board[player_row][player_col] = current_player
                    print_board()
                    player_num = player_num * (-1)
                    num_moves -= 1
                # player_num = player_num * (-1)
                # num_moves -= 1
                # print_board()

                if check_win() == "X":
                    print("X is the winner! Congrats!")
                if check_win() == "O":
                    print("O is the winner! Congrats!")
                if check_win() == "None" and num_moves <= 0:
                    print("Tie!!")

            elif qaw =="friend":
                print("Welcome to Tic Tac Toe! This is the board with the corresponding numbers: 00|01|02")
                print("                                                                          10|11|12")
                print("                                                                          20|21|22")
                print("To play: You are either X or O. Make sure your x/o matches 3 in a row")


                # Make the board
                def make_board():
                    board = []
                    for i in range(3):
                        row = []
                        for j in range(3):
                            row.append("-")
                        board.append(row)
                    return board


                # This is the board
                def print_board():
                    for i in range(3):
                        row = ""
                        for j in range(3):
                            row += board[i][j]
                        print(row)


                def check_row():
                    for i in range(3):
                        if board[i][0] == "X" and board[i][1] == "X" and board[i][2] == "X":
                            return "X"
                        if board[i][0] == "O" and board[i][1] == "O" and board[i][2] == "O":
                            return "O"


                def check_cols():
                    for i in range(3):
                        if board[0][i] == "X" and board[1][i] == "X" and board[2][i] == "X":
                            return "X"
                        if board[0][i] == "O" and board[1][i] == "O" and board[2][i] == "O":
                            return "O"


                def check_diags():
                    for i in range(3):
                        if board[0][0] == "X" and board[1][1] == "X" and board[2][2] == "X":
                            return "X"
                        if board[0][0] == "O" and board[1][1] == "O" and board[2][2] == "O":
                            return "O"
                        if board[0][2] == "X" and board[1][1] == "X" and board[2][0] == "X":
                            return "X"
                        if board[0][2] == "X" and board[1][1] == "X" and board[2][0] == "X":
                            return "O"


                def check_win():
                    if check_row() == "X" or check_cols() == "X" or check_diags() == "X":
                        return "X"
                    if check_row() == "O" or check_cols() == "O" or check_diags() == "O":
                        return "O"
                    else:
                        return "None"


                board = make_board()
                print_board()

                num_moves = 9
                player1 = "X"
                player2 = "O"
                player_num = 1

                current_player = player1
                while check_win() == "None" and num_moves > 0:
                    if player_num == 1:
                        current_player = player1
                    else:
                        current_player = player2
                    print("It is player ", current_player, "'s turn")
                    player_row = int(input("Enter the row: "))
                    player_col = int(input("Enter the col: "))
                    board[player_row][player_col] = current_player
                    print_board()
                    player_num = player_num * (-1)
                    num_moves -= 1

                if check_win() == "X":
                    print("X is the winner! Congrats!")
                if check_win() == "O":
                    print("O is the winner! Congrats!")
                if check_win() == "None" and num_moves <= 0:
                    print("Tie!!")
    #TICTACTOE IS THE GAME ABOVE________________________________________________________________________________________________________________________________________________________________________
    if x == "flappybird":
        def computer(bird_height, pillar_height):
            return False

        y = 250
        dy = 0
        s=0

        pillarx = 315
        pillary = random.randint(150, 350)
        gap = 75

        # One frame of the animation
        def main():
            global y, dy, pillarx, pillary, s

            # Draw the ball
            Window.out.background("skyblue")
            Window.out.color("Gold")
            Window.out.circle(50, y, 20)

            Window.out.color("salmon")
            Window.out.rectangle(pillarx, pillary - 250 - gap, 25, 500)

            Window.out.rectangle(pillarx, pillary + 250 + gap, 25, 500)

            # Window.out.color("dark blue")
            # Window.out.square(pillarx, pillary, 5)

            pillarx -= 3

            if pillarx < -15:
                pillarx = 315
                pillary = random.randint(150, 350)
                s=s+1


            if not (pillary - gap < y < pillary + gap) and pillarx - 12 < 50 < pillarx + 12 or y > 500:
                print('Oh no! You died!')
                print("You got through" + " " + str(s) + " "+ "poles!")
                exit()



            if (computer(y, pillary)):
                dy = -4



            if Window.mouse.clicked():
                dy = -3

            # Move the ball.
            y += dy
            dy += 1

        Window.size(300, 500)
        Window.frame(main)
        Window.start()

    #FLAPPYBIRD IS ABOVE----------------------------------------------------------------------------------------------------------------------------------------------------------------
    if x == "battleship":
        print("Welcome to Battleship python edition! Rules: 1) You will be given a set of 6 of ship harbors that look like this - [ ] 2) Each harbor has 6 O. A O is a ship. 3) One specific ship looks like a 0 instead of a O. Try to find where the 0 is!")


        def initialize_board():
            board = []
            for i in range(6):
                row = []
                for j in range(6):
                    row.append("O")
                board.append(row)
            return board


        # returns the board
        def generate_battleship_board():
            board = initialize_board()
            a = random.randint(0, 5)
            b = random.randint(0, 5)
            board[a][b] = 0
            return board


        # initialize num lives
        n = 8
        # create board with hidden battleship in it
        board = generate_battleship_board()
        print(board)
        # prompt for index 1
        guessnum1 = int(input("a: "))
        # prompt for index 2
        guessnum2 = int(input("b: "))
        # game loop: runs until run out of lives or they guess the correct index
        while n > 0 and board[guessnum1][guessnum2] != 0:
            guessnum1 = int(input("a: "))
            guessnum2 = int(input("b: "))
            n = n - 1

        if n <= 0:
            print("You lost! Hahaha You never found the ship.")

        else:
            print("Congrats! You won. You found the ship!")
